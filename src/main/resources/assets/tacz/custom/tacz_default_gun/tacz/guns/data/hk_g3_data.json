{
  // 指定枪械弹药
  "ammo": "tacz:308",
  // 弹容
  "ammo_amount": 20,
  // 扩容弹夹弹药总数
  "extended_mag_ammo_amount": [
    30,
    35,
    40
  ],
  // 枪栓类型：开膛待机（open_bolt）、闭膛待击（closed_bolt）、手动上膛（manual_action)
  "bolt": "closed_bolt",
  // 每分钟射出弹药量，最大不应超过 1200
  "rpm": 550,
  // 子弹实体属性
  "bullet": {
    // 寿命，单位秒
    "life": 0.8,
    // 用于霰弹，默认为 1，每发的伤害 / bullet_amount，每次射击扣除一发子弹
    "bullet_amount": 1,
    // 伤害
    "damage": 11,
    // 曳光弹间隔数量，没有此字段则不发射曳光弹
    // 设置为 0 则是每发都是曳光弹
    "tracer_count_interval": 0,
    // 额外伤害的内容，为空则表示没有任何额外伤害计算内容
    "extra_damage": {
      // 护甲穿透率，默认为 0，也就是没有穿甲伤害
      "armor_ignore": 0.4,
      // 爆头伤害 x1.5
      "head_shot_multiplier": 1.5,
      // 距离-伤害分段常函数
      "damage_adjust": [
        // 这样就能写抵近伤害了
        {"distance": 0.5, "damage": 13.5},
        {"distance": 15.5, "damage": 11},
        {"distance": 32.5, "damage": 9.5},
        // 如果你忘记写这个无穷，那么超过上述距离，我就认为是 0
        {"distance": "infinite", "damage": 7.5}
      ]
    },
    // 速度 m/s
    "speed": 270,
    // 重力
    "gravity": 0.0245,
    // 击退效果
    "knockback": 0,
    // 阻力
    "friction": 0.012,
    // 点燃目标
    "ignite": false,
    // 穿透数
    "pierce": 2
    // 是否爆炸，没有此字段时为 false
    //"explosion": {
    //  "radius": 5
    //}
  },
  // 换弹相关
  "reload": {
    // magazine 是弹匣供弹，manual 是手动供弹
    "type": "magazine",
    // 弹匣供弹换弹时长（秒），到达此时间点，服务端就更新枪内子弹数量
    "feed": {
      // 空仓换弹
      "empty": 2.7,
      // 战术换弹
      "tactical": 1.55
    },
    // 弹匣供弹总时长（秒），到达此时间点，枪械才可以进行开火、检视等行为。
    "cooldown": {
      // 空仓换弹
      "empty": 3.15,
      // 战术换弹
      "tactical": 2.05
    }
  },
  // 枪械抬起的动作时长，单位秒。
  // 抬起动作完成后，枪械可以进行开火、检视等行为
  "draw_time": 0.65,
  // 收枪的动作时长，单位秒。
  "put_away_time": 0.5,
  // 瞄准时长，单位秒。
  "aim_time": 0.24,
  "sprint_time": 0.2,
  // 拉栓上膛的时间，仅当枪栓类型为 manual_action 时有效
  // "bolt_action_time": 0.9,
  // 开火模式
  "fire_mode": [
    "semi",
    "auto"
  ],
  // 后坐力
  "recoil": {
    "pitch": [
      {"time": 0, "value": [1.25, 1.25]},
      {"time": 0.3, "value": [1.25, 1.25]},
      {"time": 0.55, "value": [-0.225, -0.225]},
      {"time": 0.7, "value": [0, 0]},
      {"time": 0.8, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [-0.55, -0.3]},
      {"time": 0.45, "value": [-0.55, -0.3]},
      {"time": 0.7, "value": [0, 0]}
    ]
  },
  // 不准确度
  "inaccuracy": {
    // 站立射击散布
    "stand": 5,
    // 移动射击散布
    "move": 5.5,
    // 潜行射击散布
    "sneak": 3.25,
    // 趴下射击散布
    "lie": 1.5,
    // 瞄准射击时散布
    "aim": 0.15
  },
  // 开放的配件槽。未指定的槽位默认关闭。全部配件槽类型有:
  // scope, stock, muzzle, grip, laser
  "allow_attachments": {
    "scope": {
      "black_list": [
        "tacz:sight_sro_dot"
      ]
    },
    "stock": {},
    "grip": {},
    "muzzle": {
      "black_list": [
        "tacz:muzzle_silence_mirage"
      ]
    },
    "extended_mag": {}
  },
  // 专属的配件属性
  "exclusive_attachments": {
    // 配件 ID，后面的数据和配件的 data 部分结构完全一致
    "tacz:scope_standard_8x": {
      "weight": 2.0,
      "ads_addend": 0.04,
      "inaccuracy_addend": -0.4,
      "recoil_modifier": {
        "pitch": -0.2,
        "yaw": -0.1
      }
    }
  }
}